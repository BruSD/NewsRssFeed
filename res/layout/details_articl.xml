<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_w">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg">

        <ImageButton
                android:id="@+id/back_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/side_bar_btn"
                android:layout_gravity="center_vertical"
                android:background="#00000000"/>
        <ImageView
                android:id="@+id/article_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo"
                android:layout_gravity="center_vertical"/>
        <TextView
                android:id="@+id/article_head"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/head_app"
                android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <TextView
            android:id="@+id/article_title"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            />
    <LinearLayout

            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right">
        <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        <ImageButton
                android:id="@+id/article_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/button_share"
                />
        <ImageButton
                android:id="@+id/article_fav"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/star_buttton"
                />

    </LinearLayout>
    <WebView
            android:id="@+id/article_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_w"
            />


</LinearLayout>