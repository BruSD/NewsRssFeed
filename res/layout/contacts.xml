<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#EEEEEA">

    <RelativeLayout android:id="@+id/contacts_actionBar"
                    style="@style/AB">
        <ImageView android:id="@+id/contacts_actionBarBG"
                   style="@style/AB_Background"/>
        <ImageButton android:id="@+id/contactSidebarButton"
                     style="@style/AB_SideBarButton"/>
        <ImageView android:id="@+id/contacts_firm_symbol"
                   style="@style/AB_FirmSymbol" android:layout_toRightOf="@+id/contactSidebarButton"/>
        <TextView android:id="@+id/contacts_firm_title"
                  style="@style/AB_FirmTitle" android:layout_toRightOf="@+id/contacts_firm_symbol"/>
    </RelativeLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contacts_scrollView" android:background="#611B40">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="#EEEEEA">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_gravity="left" android:background="#611B40">
                <ImageView
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:id="@+id/contacts_main_image" android:src="@drawable/contact_top_icon" android:adjustViewBounds="true"
                        android:layout_alignParentRight="true" android:layout_marginRight="53dp"
                        android:layout_marginTop="12dp" android:layout_centerVertical="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contacts"
                        android:id="@+id/contacts_title" android:textColor="#ffffff" android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp" android:textStyle="bold" android:textSize="18dp"/>
            </RelativeLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/contacts_text_getin" android:layout_marginLeft="12dp" android:layout_marginTop="36dp"
                        android:layout_marginBottom="30dp" android:singleLine="false" android:text="Text"/>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:id="@+id/contacts_irelandBG" android:src="@drawable/contacts_grey_plate"
                            android:adjustViewBounds="true" android:scaleType="fitXY"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ireland"
                            android:id="@+id/contacts_IrelandTitle" android:layout_alignLeft="@+id/contacts_irelandBG"
                            android:layout_alignTop="@+id/contacts_irelandBG" android:layout_marginLeft="12dp"
                            android:layout_marginTop="10dp" android:textStyle="bold"/>
                    <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:layout_alignRight="@+id/contacts_irelandBG"
                            android:layout_alignTop="@+id/contacts_irelandBG" android:layout_marginRight="12dp"
                            android:layout_marginTop="5dp">
                        <ImageView
                                android:layout_width="45dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/contacts_mapIR" android:src="@drawable/contacts_button_map" android:scaleType="fitXY"
                                android:adjustViewBounds="true"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Map"
                                android:id="@+id/contacts_mapText" android:textColor="#ffffff" android:layout_centerInParent="true"
                                android:textSize="12dp"/>
                    </RelativeLayout>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/contacts_separator" android:layout_below="@+id/contacts_IrelandTitle" android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp" android:layout_marginTop="6dp"
                            android:src="@drawable/contacts_separate_line" android:adjustViewBounds="false"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chartered Accountants House,"
                            android:id="@+id/contacts_IrelandAddr1"
                            android:layout_alignLeft="@+id/contacts_IrelandTitle" android:layout_below="@+id/contacts_separator"
                            android:layout_marginTop="10dp" android:textSize="13dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="47 Pearse St,"
                            android:id="@+id/contacts_IrelandAddr2" android:layout_alignLeft="@+id/contacts_IrelandTitle"
                            android:layout_below="@+id/contacts_IrelandAddr1" android:textSize="13dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dublin 2,"
                            android:id="@+id/contacts_IrelandAddr3"
                            android:layout_alignLeft="@+id/contacts_IrelandTitle" android:layout_below="@+id/contacts_IrelandAddr2"
                            android:textSize="13dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ireland"
                            android:id="@+id/contacts_IrelandAddr4" android:layout_alignLeft="@+id/contacts_IrelandTitle"
                            android:layout_below="@+id/contacts_IrelandAddr3" android:textSize="13dp"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:id="@+id/RelativeL1" android:layout_toRightOf="@+id/contacts_Ireland_tel_text"
                                    android:layout_marginLeft="12dp"
                                    android:layout_marginTop="-2dp" android:layout_alignTop="@+id/contacts_Ireland_tel_text">
                        <ImageView
                                android:layout_width="42dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/contacts_callIR" android:adjustViewBounds="true"
                                android:src="@drawable/contacts_button_call" android:scaleType="fitXY"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Call"
                                  android:id="@+id/contacts_callText" android:textColor="#ffffff"
                                  android:textSize="12dp" android:layout_centerHorizontal="true"
                                  android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Text"
                            android:id="@+id/contacts_Ireland_tel_text"
                            android:layout_alignLeft="@+id/contacts_IrelandTitle" android:layout_below="@+id/contacts_IrelandAddr4"
                            android:layout_marginTop="9dp"/>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp" android:layout_marginRight="12dp"
                                android:id="@+id/relativeLayout3" android:layout_marginTop="30dp">
                    <ImageView android:layout_width="wrap_content" android:layout_height="180dp" android:id="@+id/contacts_NI_BG"
                               android:src="@drawable/contacts_grey_plate" android:adjustViewBounds="false"
                               android:scaleType="fitXY"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Northern Ireland"
                              android:id="@+id/contacts_NI_Title" android:layout_alignLeft="@+id/contacts_NI_BG"
                              android:layout_alignTop="@+id/contacts_NI_BG" android:layout_marginLeft="12dp"
                              android:layout_marginTop="10dp" android:textStyle="bold"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:layout_alignRight="@+id/contacts_NI_BG" android:layout_alignTop="@+id/contacts_NI_BG"
                                    android:layout_marginRight="12dp" android:layout_marginTop="5dp">
                        <ImageView android:layout_width="45dp" android:layout_height="wrap_content" android:id="@+id/imageView7"
                                   android:src="@drawable/contacts_button_map" android:scaleType="fitXY"
                                   android:adjustViewBounds="true"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Map"
                                  android:id="@+id/contacts_mapText" android:textColor="#ffffff" android:layout_centerInParent="true"
                                  android:textSize="12dp"/>
                    </RelativeLayout>
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/contacts_separator"
                               android:layout_below="@+id/contacts_NI_Title" android:layout_marginLeft="10dp"
                               android:layout_marginRight="10dp" android:layout_marginTop="6dp"
                               android:src="@drawable/contacts_separate_line" android:adjustViewBounds="false"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Chartered Accountants House," android:id="@+id/contacts_NI_Addr1"
                              android:layout_alignLeft="@+id/contacts_NI_Title" android:layout_below="@+id/contacts_separator"
                              android:layout_marginTop="10dp" android:textSize="13dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="32-38 Linenhall Street,"
                              android:id="@+id/contacts_NI_Addr2" android:layout_alignLeft="@+id/contacts_NI_Title"
                              android:layout_below="@+id/contacts_NI_Addr1" android:textSize="13dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Belfast,"
                              android:id="@+id/contacts_NI_Addr3" android:layout_alignLeft="@+id/contacts_NI_Title"
                              android:layout_below="@+id/contacts_NI_Addr2" android:textSize="13dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Country Antrim BT2 8BG,"
                              android:id="@+id/contacts_NI_Addr4" android:layout_alignLeft="@+id/contacts_NI_Title"
                              android:layout_below="@+id/contacts_NI_Addr3" android:textSize="13dp"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="New Text"
                              android:id="@+id/contacts_NI_tel_text" android:layout_alignLeft="@+id/contacts_NI_Title"
                              android:layout_below="@+id/contacts_NI_Addr5" android:layout_marginTop="9dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Northen Ireland"
                            android:id="@+id/contacts_NI_Addr5" android:layout_alignLeft="@+id/contacts_NI_Title"
                            android:layout_below="@+id/contacts_NI_Addr4"/>
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                                    android:id="@+id/RelativeL1" android:layout_toRightOf="@+id/contacts_NI_tel_text"
                                    android:layout_alignTop="@+id/contacts_NI_tel_text" android:layout_marginLeft="12dp"
                                    android:layout_marginTop="-2dp" android:focusableInTouchMode="false">
                        <ImageView android:layout_width="42dp" android:layout_height="wrap_content" android:id="@+id/contacts_callNI"
                                   android:src="@drawable/contacts_button_call" android:scaleType="fitXY"
                                   android:adjustViewBounds="true" android:layout_alignParentLeft="true"
                                   android:layout_alignParentTop="true"/>
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Call"
                                  android:id="@+id/contacts_callText" android:textColor="#ffffff" android:textSize="12dp"
                                  android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:layout_marginTop="22dp" android:id="@+id/relativeLayout">
                    <ImageView android:layout_width="wrap_content" android:layout_height="85dp"
                               android:id="@+id/contacts_sharePanelBG" android:src="@drawable/settings_gray_plate"
                               android:adjustViewBounds="true" android:layout_alignParentEnd="false"
                               android:layout_centerVertical="true" android:scaleType="fitXY"/>
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:text="Connect With Us" android:id="@+id/contacts_sharePanel_text"
                              android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                              android:layout_marginLeft="12dp" android:layout_marginTop="10dp"
                              android:layout_marginBottom="10dp" android:textColor="#7D003A" android:textSize="18dp"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:layout_below="@+id/contacts_sharePanel_text">
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/contacts_facebook"
                                   android:layout_below="@+id/contacts_sharePanel_text" android:scaleType="fitXY"
                                   android:adjustViewBounds="true" android:src="@drawable/facebook"
                                   android:layout_alignParentLeft="false" android:layout_alignParentRight="true"
                                   android:layout_marginRight="12dp" android:layout_weight="180"
                                   android:layout_marginLeft="12dp"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/contacts_twitter"
                                   android:layout_below="@+id/contacts_sharePanel_text" android:src="@drawable/tvitter"
                                   android:adjustViewBounds="true" android:scaleType="fitXY"
                                   android:layout_marginRight="12dp" android:layout_weight="189"/>
                        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/contacts_linkedin"
                                   android:layout_below="@+id/contacts_sharePanel_text" android:adjustViewBounds="true"
                                   android:src="@drawable/linkedin" android:layout_alignParentBottom="false"
                                   android:layout_alignParentLeft="false" android:layout_alignParentRight="false"
                                   android:layout_alignParentTop="false" android:layout_alignWithParentIfMissing="false"
                                   android:scaleType="fitXY" android:layout_centerHorizontal="true"
                                   android:layout_weight="170" android:layout_marginRight="12dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>