<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#EFEEEA">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" android:background="#820046">

        <ImageButton
                android:id="@+id/back_button"
                android:src="@drawable/back_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="0dp" android:focusableInTouchMode="false" android:adjustViewBounds="false"
                android:baselineAlignBottom="false" android:clickable="false" android:cropToPadding="false"
                android:focusable="false" android:background="#820046"/>
        <ImageView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/ic_launcher"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="@string/head_app"
                />

    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/PodcastTitleText" android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#010101" android:background="#efeeea" android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" android:layout_marginTop="16dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/PodcastDateText" android:textStyle="italic"
                    android:textSize="13dp"
                    android:textColor="#010101" android:layout_marginLeft="12dp" android:layout_marginRight="12dp"
                    android:layout_marginTop="12dp"/>
            <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/PodcastDescription"
                    android:layout_marginLeft="12dp" android:layout_marginRight="12dp"
                    android:layout_marginTop="16dp" android:padding="0dp"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp" android:layout_marginTop="16dp" android:background="#DFDEDA">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="22dp" android:layout_marginRight="22dp"
                        android:layout_marginTop="16dp">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="87">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/PodcastSeek10Button"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:padding="0dp" android:adjustViewBounds="true"
                                android:src="@drawable/seek_button2" android:scaleType="fitXY"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="69.5">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="87">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/PodcastPlay_pauseButton"
                                android:layout_centerHorizontal="true" android:layout_alignTop="@+id/PodcastSeek10Button"
                                android:padding="0dp" android:adjustViewBounds="true" android:scaleType="fitXY"
                                android:src="@drawable/play_button"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="69.5">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" android:layout_weight="86.8">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/PodcastSeek30Button"
                                android:layout_alignParentRight="true" android:layout_alignTop="@+id/PodcastSeek10Button"
                                android:padding="0dp" android:adjustViewBounds="true" android:scaleType="fitXY"
                                android:src="@drawable/seek_button1"/>
                    </LinearLayout>
                </LinearLayout>
                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="22dp" android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">
                    <SeekBar
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/PodcastSeekbar"
                            android:indeterminate="false"
                            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                            android:paddingRight="0dp" android:layout_marginLeft="6dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/PodcastPlayedTime"
                            android:text="00:00"
                            android:layout_alignParentLeft="true" android:layout_alignTop="@+id/PodcastAllTime"
                            android:layout_marginLeft="16dp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/PodcastAllTime"
                            android:text="00:00"
                            android:layout_alignParentRight="true" android:layout_below="@+id/PodcastSeekbar"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>