
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/bg"
        >




    <LinearLayout
            android:id="@+id/app"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


        <LinearLayout
                style="@style/AB_search"
                android:layout_width="match_parent"
                android:layout_height="46dp">


            <ImageButton
                    android:id="@+id/BtnBack"
                    style="@style/AB_SideBarCancelButton"

                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="85"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    >
            <ImageView
                    android:id="@+id/search"
                    style="@style/AB_Search_Fild"


                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <EditText
                        android:id="@+id/serchquerybox"
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:text="Tax"
                        android:background="#00000000"
                        android:layout_marginLeft="120dp"
                        />
            </RelativeLayout>
            <ImageButton
                    android:id="@+id/searchBTN"
                    style="@style/AB_searchBTN"

                    android:layout_width="match_parent" android:layout_height="match_parent"
                    android:layout_weight="85"/>
        </LinearLayout>
        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="80">
               <Button
                       android:id="@+id/saved_search_button"
                       android:layout_height="match_parent"
                       android:layout_width="match_parent"
                       android:background="@drawable/saved_search_button"
                       android:text="Saved Search"
                       />
        </LinearLayout>

        <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="20">
            <com.fortysevendeg.android.swipelistview.SwipeListView
                    xmlns:swipe="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/searchListView"
                    android:listSelector="#00000000"
                    android:background="@drawable/bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    swipe:swipeFrontView="@+id/front"
                    swipe:swipeBackView="@+id/back"


                    />
        </LinearLayout>
        </LinearLayout>



</FrameLayout>

